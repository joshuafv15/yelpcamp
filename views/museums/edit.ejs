<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Museum</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/museums/<%= museum.id %>?_method=PUT " method="POST" novalidate class="needs-validation"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id='title' name='museum[title]' value="<%= museum.title %>"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id='location' name='museum[location]'
                        value="<%= museum.location %>" required>
                </div>
                <label class="form-label" for="image">Add Images </label>

                <div class="mb-3">
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <label class="form-label" for="images">Images </label>

                <div class="mb-3">
                    <% museum.images.forEach((img,i)=> { %>
                        <img src="<%=img.thumbnail%> " class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="img-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="img-<%=i%>">Delete?</label>
                        <%}) %>

                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input class="form-control" type="number" min="0" id='price' name='museum[price]'
                            aria-label="price" aria-describedby="price-label" value="<%= museum.price %>" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id='description' name='museum[description]'
                        required><%= museum.description %></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info ">Update Museum</button>
                </div>
            </form>
            <a href="/museums/<%= museum.id %> ">Go back </a>
        </div>
    </div>