<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/search.css">
    <div id="cluster-map" class="mb-3"></div>
    <div class="row">
        <div class="col-md-6">
            <h1>Museums</h1>
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-3"><input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for museums..">
        </div>
    </div class="mt-3">
    <ul id="myUL">
        <% for (let museum of museums) { %>
            <li>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <% if (museum.images[0]){ %>
                                <img class="img-fluid" src="<%=museum.images[0].url%>" alt="">
                                <% } else { %>

                                    <img class="img-fluid"
                                        src="https://res.cloudinary.com/scenerybubble-yelpcamp/image/upload/v1626948247/YelpCamp/defaultImg_ffkol7.jpg"
                                        alt="">
                                    <% } %>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= museum.title %>
                                </h5>

                                <p class="card-text">
                                    <%= museum.description %>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <%= museum.location %>
                                    </small>
                                </p>
                                <a class="btn btn-primary" href="/museums/<%= museum.id %>"> View <%= museum.title %>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            <% } %>
    </ul>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN %>';
        const museums = { features:  <%- JSON.stringify(museums) %>}
    </script>

    <script src="/javascripts/clusterMap.js"></script>
    <script src="/javascripts/searchBar.js"></script>